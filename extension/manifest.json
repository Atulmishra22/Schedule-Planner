{
  "manifest_version": 3,
  "name": "Schedule Planner",
  "version": "1.0.0",
  "description": "Professional productivity app for task-based scheduling with analytics",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Schedule Planner"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}
